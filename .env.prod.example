# Variáveis de ambiente para o Sistema de Gestão de Licitações Governamentais
# Este arquivo contém as variáveis de ambiente para o ambiente de produção

# Configurações do PostgreSQL
POSTGRES_USER=licitacoes_user
POSTGRES_PASSWORD=senha_segura_postgres
POSTGRES_DB=licitacoes_db

# Configurações do Redis
REDIS_PASSWORD=senha_segura_redis

# Configurações do backend
SECRET_KEY=chave_secreta_muito_segura_para_producao
ENVIRONMENT=production
CORS_ORIGINS=https://licitacoes.exemplo.gov.br

# Configurações do frontend
REACT_APP_API_URL=https://api.licitacoes.exemplo.gov.br

# Configurações do Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=senha_segura_grafana

# Configurações de e-mail
SMTP_HOST=smtp.exemplo.gov.br
SMTP_PORT=587
SMTP_USER=notificacoes@exemplo.gov.br
SMTP_PASSWORD=senha_segura_email
EMAIL_FROM=notificacoes@exemplo.gov.br

# Configurações de segurança
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Configurações de monitoramento
ENABLE_METRICS=true
METRICS_TOKEN=token_seguro_para_metricas
